{
  "application": {
    "packages": {
      "meteor": [
        "fortawesome:fontawesome"
      ],
      "npm": [
        "debug",
        "xlsx"
      ]
    },
    "collections": [
      {
        "fields": [
          {
            "name": "name",
            "title": "Name",
            "required": true,
            "exportable": true
          },
          {
            "name": "description",
            "title": "Description",
            "required": true,
            "exportable": true
          }
        ],
        "owner_field": "ownerId",
        "roles_allowed_to_read": [
          "admin",
          "viewer",
          "editor"
        ],
        "roles_allowed_to_update": [
          "admin",
          "editor"
        ],
        "roles_allowed_to_delete": [
          "admin"
        ],
        "name": "schemas"
      },
      {
        "fields": [
          {
            "name": "schemaId",
            "title": "Schema",
            "required": true,
            "exportable": false,
            "input": "select",
            "lookup_query_name": "schema_list",
            "lookup_field": "name",
            "lookup_key": "_id",
            "show_in_dataview": false,
            "show_in_read_only_form": false,
            "join_collection": "schemas",
            "join_fields": [
              "name"
            ],
            "join_container": "schema"
          },
          {
            "name": "name",
            "title": "Name",
            "required": true,
            "exportable": true
          },
          {
            "name": "description",
            "title": "Description",
            "required": true,
            "exportable": true
          },
          {
            "name": "schema.name",
            "title": "Schema",
            "show_in_insert_form": false,
            "show_in_update_form": false,
            "exportable": true
          }
        ],
        "owner_field": "ownerId",
        "roles_allowed_to_read": [
          "admin",
          "viewer",
          "editor"
        ],
        "roles_allowed_to_update": [
          "admin",
          "editor"
        ],
        "roles_allowed_to_delete": [
          "admin"
        ],
        "name": "tables"
      },
      {
        "fields": [
          {
            "name": "tableId",
            "title": "Table",
            "required": true,
            "exportable": false,
            "input": "select",
            "lookup_query_name": "table_list",
            "lookup_field": "name",
            "lookup_key": "_id",
            "show_in_dataview": false,
            "show_in_read_only_form": false,
            "join_collection": "tables",
            "join_fields": [
              "name"
            ],
            "join_container": "table"
          },
          {
            "name": "name",
            "title": "Name",
            "required": true,
            "exportable": true
          },
          {
            "name": "column",
            "title": "Column",
            "required": true,
            "exportable": true
          },
          {
            "name": "data_type",
            "title": "Data Type",
            "required": true,
            "exportable": true
          },
          {
            "name": "key",
            "title": "Key",
            "required": true,
            "exportable": true
          },
          {
            "name": "anon_level",
            "title": "Anon Level",
            "required": true,
            "exportable": true
          },
          {
            "name": "anon_type",
            "title": "Anon Type",
            "required": true,
            "exportable": true
          },
          {
            "name": "hash",
            "title": "Hash",
            "required": true,
            "exportable": true
          },
          {
            "name": "table.name",
            "title": "Table",
            "show_in_insert_form": false,
            "show_in_update_form": false,
            "exportable": true
          }
        ],
        "owner_field": "ownerId",
        "roles_allowed_to_read": [
          "admin",
          "viewer",
          "editor"
        ],
        "roles_allowed_to_update": [
          "admin",
          "editor"
        ],
        "roles_allowed_to_delete": [
          "admin"
        ],
        "name": "rows"
      }
    ],
    "roles": [
      "admin",
      "editor",
      "viewer"
    ],
    "templating": "react",
    "login_with_github": true,
    "queries": [
      {
        "name": "schema_list",
        "collection": "schemas",
        "filter": "{}",
        "options": "{  \"sort\": { \"name\": 1 } }"
      },
      {
        "name": "schema_empty",
        "collection": "schemas",
        "filter": "{ \"_id\": null }",
        "find_one": true
      },
      {
        "name": "schema_details",
        "collection": "schemas",
        "find_one": true,
        "filter": "{ \"_id\": \":schemaId\" }",
        "options": "{}"
      },
      {
        "name": "table_list",
        "collection": "tables",
        "filter": "{}",
        "options": "{  \"sort\": { \"name\": 1 } }"
      },
      {
        "name": "table_empty",
        "collection": "tables",
        "filter": "{ \"_id\": null }",
        "find_one": true
      },
      {
        "name": "table_details",
        "collection": "tables",
        "find_one": true,
        "filter": "{ \"_id\": \":tableId\" }",
        "options": "{}"
      },
      {
        "name": "row_list",
        "collection": "rows",
        "filter": "{}",
        "options": "{  \"sort\": { \"name\": 1 } }"
      },
      {
        "name": "row_empty",
        "collection": "rows",
        "filter": "{ \"_id\": null }",
        "find_one": true
      },
      {
        "name": "row_details",
        "collection": "rows",
        "find_one": true,
        "filter": "{ \"_id\": \":rowId\" }",
        "options": "{}"
      }
    ],
    "public_zone": {
      "pages": [
        {
          "name": "home_public",
          "title": "",
          "components": [
            {
              "name": "home_jumbotron",
              "title": "Home",
              "type": "jumbotron",
              "text": "Data Dictionary Editor (DDE)",
              "button_title": "Continue &raquo;",
              "button_route": "login"
            }
          ]
        },
        {
          "name": "login",
          "template": "login"
        },
        {
          "name": "register",
          "template": "register"
        },
        {
          "name": "forgot_password",
          "template": "forgot_password"
        },
        {
          "name": "reset_password",
          "template": "reset_password",
          "route_params": [
            "resetPasswordToken"
          ]
        }
      ],
      "components": [
        {
          "name": "left_menu",
          "type": "menu",
          "class": "nav navbar-nav",
          "dest_selector": "#menu",
          "items": [
            {
              "title": "Home",
              "route": "home_public"
            }
          ]
        },
        {
          "name": "right_menu",
          "type": "menu",
          "class": "nav navbar-nav navbar-right",
          "dest_selector": "#menu",
          "items": [
            {
              "title": "Register",
              "route": "register"
            },
            {
              "title": "Login",
              "route": "login"
            }
          ]
        }
      ]
    },
    "private_zone": {
      "pages": [
        {
          "name": "home_private",
          "title": "Welcome {{userFullName}}!",
          "text": "Place for dashboard here..."
        },
        {
          "name": "Schemas",
          "components": [
            {
              "name": "view",
              "type": "data_view",
              "title": "Schemas",
              "text_if_empty": "I'm sorry, there are no schemas :(",
              "query_name": "schema_list",
              "page_size": 20,
              "insert_route": "schemas.insert",
              "edit_route": "schemas.edit",
              "edit_route_params": [
                {
                  "name": "schemaId",
                  "value": "this._id"
                }
              ],
              "details_route": "schemas.details",
              "details_route_params": [
                {
                  "name": "schemaId",
                  "value": "this._id"
                }
              ]
            }
          ],
          "pages": [
            {
              "name": "insert",
              "components": [
                {
                  "name": "insert_form",
                  "type": "form",
                  "mode": "insert",
                  "title": "New Schemas",
                  "query_name": "schema_empty",
                  "submit_route": "Schemas",
                  "cancel_route": "Schemas"
                }
              ]
            },
            {
              "name": "details",
              "route_params": [
                "schemaId"
              ],
              "components": [
                {
                  "name": "details_form",
                  "type": "form",
                  "mode": "read_only",
                  "title": "Details",
                  "query_name": "schema_details",
                  "close_route": "Schemas",
                  "back_route": "Schemas"
                }
              ]
            },
            {
              "name": "edit",
              "route_params": [
                "schemaId"
              ],
              "components": [
                {
                  "name": "edit_form",
                  "type": "form",
                  "mode": "update",
                  "title": "Edit Schemas",
                  "submit_route": "Schemas",
                  "cancel_route": "Schemas",
                  "query_name": "schema_details"
                }
              ]
            }
          ]
        },
        {
          "name": "Tables",
          "components": [
            {
              "name": "view",
              "type": "data_view",
              "title": "Tables",
              "text_if_empty": "I'm sorry, there are no tables :(",
              "query_name": "table_list",
              "page_size": 20,
              "insert_route": "tables.insert",
              "edit_route": "tables.edit",
              "edit_route_params": [
                {
                  "name": "tableId",
                  "value": "this._id"
                }
              ],
              "details_route": "tables.details",
              "details_route_params": [
                {
                  "name": "tableId",
                  "value": "this._id"
                }
              ]
            }
          ],
          "pages": [
            {
              "name": "insert",
              "components": [
                {
                  "name": "insert_form",
                  "type": "form",
                  "mode": "insert",
                  "title": "New Tables",
                  "query_name": "table_empty",
                  "submit_route": "Tables",
                  "cancel_route": "Tables"
                }
              ]
            },
            {
              "name": "details",
              "route_params": [
                "tableId"
              ],
              "components": [
                {
                  "name": "details_form",
                  "type": "form",
                  "mode": "read_only",
                  "title": "Details",
                  "query_name": "table_details",
                  "close_route": "Tables",
                  "back_route": "Tables"
                }
              ]
            },
            {
              "name": "edit",
              "route_params": [
                "tableId"
              ],
              "components": [
                {
                  "name": "edit_form",
                  "type": "form",
                  "mode": "update",
                  "title": "Edit Tables",
                  "submit_route": "Tables",
                  "cancel_route": "Tables",
                  "query_name": "table_details"
                }
              ]
            }
          ]
        },
        {
          "name": "Rows",
          "components": [
            {
              "name": "view",
              "type": "data_view",
              "title": "Rows",
              "text_if_empty": "I'm sorry, there are no rows :(",
              "query_name": "row_list",
              "page_size": 20,
              "insert_route": "rows.insert",
              "edit_route": "rows.edit",
              "edit_route_params": [
                {
                  "name": "rowId",
                  "value": "this._id"
                }
              ],
              "details_route": "rows.details",
              "details_route_params": [
                {
                  "name": "rowId",
                  "value": "this._id"
                }
              ]
            }
          ],
          "pages": [
            {
              "name": "insert",
              "components": [
                {
                  "name": "insert_form",
                  "type": "form",
                  "mode": "insert",
                  "title": "New Rows",
                  "query_name": "row_empty",
                  "submit_route": "Rows",
                  "cancel_route": "Rows"
                }
              ]
            },
            {
              "name": "details",
              "route_params": [
                "rowId"
              ],
              "components": [
                {
                  "name": "details_form",
                  "type": "form",
                  "mode": "read_only",
                  "title": "Details",
                  "query_name": "row_details",
                  "close_route": "Rows",
                  "back_route": "Rows"
                }
              ]
            },
            {
              "name": "edit",
              "route_params": [
                "rowId"
              ],
              "components": [
                {
                  "name": "edit_form",
                  "type": "form",
                  "mode": "update",
                  "title": "Edit Rows",
                  "submit_route": "Rows",
                  "cancel_route": "Rows",
                  "query_name": "row_details"
                }
              ]
            }
          ]
        }
      ],
      "components": [
        {
          "name": "left_menu",
          "type": "menu",
          "class": "nav navbar-nav",
          "dest_selector": "#menu",
          "items": [
            {
              "title": "Home",
              "route": "home_private"
            },
            {
              "title": "Schemas",
              "route": "schemas"
            },
            {
              "title": "Tables",
              "route": "tables"
            },
            {
              "title": "Rows",
              "route": "rows"
            }
          ]
        },
        {
          "name": "right_menu",
          "type": "menu",
          "class": "nav navbar-nav navbar-right",
          "dest_selector": "#menu",
          "items": [
            {
              "title": "{{userEmail}}",
              "items": [
                {
                  "title": "Settings",
                  "route": "user_settings"
                },
                {
                  "title": "Logout",
                  "route": "logout"
                }
              ]
            }
          ]
        }
      ]
    }
  }
}